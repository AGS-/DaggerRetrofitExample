<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_detail_image_poster"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/sample_movie_poster" />

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_detail_text_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Movie Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_detail_text_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/activity_detail_text_movie_name"
                android:text="Genre"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/activity_detail_text_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/activity_detail_text_genre"
                android:text="MM-dd-yyyy" />

            <ImageView
                android:id="@+id/activity_detail_image_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_detail_text_release_date"
                android:layout_toEndOf="@id/activity_detail_text_release_date"
                android:layout_below="@id/activity_detail_text_genre"
                android:src="@drawable/ic_today_grey600_18dp" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_detail_text_overview"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque condimentum rutrum ipsum, vitae maximus tortor faucibus ut. Nam eu arcu nibh. Donec ex arcu, semper sit amet euismod ac, aliquet et odio. Curabitur tempus quis lectus quis volutpat. Integer nec aliquet dui, non fermentum dolor. Quisque accumsan augue felis, non varius nisi vulputate vitae. Quisque dolor justo, elementum eu felis id, egestas sagittis libero. Pellentesque mattis congue orci vel elementum. In quis sapien quis turpis tempor posuere. Integer ornare tincidunt orci, eget viverra neque posuere at. Suspendisse sed mattis neque. Cras quis lacus nibh."
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>